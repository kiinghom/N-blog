<%- include('header') %>

<div class="ui grid">
	<div class="four wide column">
		<a class="avator" href="/posts?author=<%= user.id %>"
		 	data-title="<%= user.name %> | <%= ({m: 'Male', f: 'Female', x: 'Secret'})[user.gender] %>"
		 	data-content="<%= user.bio %>">
		 	<img src="/img/<%= user.avator %>" class="avator">
		</a>
	</div>

	<div class="eight wide column">
		<form class="ui form segment" method="post" action="/posts">
			<div class="field required">
				<label>Title</label>
				<input type="text" name="title">
			</div>
			<div class="field required">
				<label>Content</label>
				<textarea name="content" rows="15"></textarea>
			</div>
			<input type="submit" value="Post" class="ui button">
		</form>
	</div>
</div>

<%- include('footer') %>
